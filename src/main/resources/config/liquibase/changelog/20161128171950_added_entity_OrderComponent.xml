<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity OrderComponent.
    -->
    <changeSet id="20161128171950-1" author="jhipster">
        <createTable tableName="order_component">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="days" type="integer">
                <constraints nullable="true" />
            </column>
            
            <column name="medication" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="dosage_form" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="dose" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="administration_time" type="timestamp">
                <constraints nullable="true" />
            </column>
            
            <column name="status" type="varchar(3)">
                <constraints nullable="false" />
            </column>
            
            <column name="frequency" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="all_orders_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="routes_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="del_status" type="boolean" defaultValue="false"/>

            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>

            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="order_component" columnName="administration_time" columnDataType="datetime"/>
        
    </changeSet>
</databaseChangeLog>
